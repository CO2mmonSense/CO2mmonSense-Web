<div class="container mt-5" style="max-width: 1200px;">
    <h1>My API Keys</h1>
    <% if flash[:raw_api_key] %>
        <div class="alert alert-light" role="alert">
        <p>This is your new API key. Make sure to save it to a secure location, like a password manager. For your security, you will not be able to see this key again.</p>
        <hr>
        <code><%= flash[:raw_api_key] %></code>
        </div>
    <% end %>
    <table class="table">
        <thead>
            <tr>
            <th scope="col">Name</th>
            <th scope="col">Token</th>
            <th scope="col">Expires</th>
            <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if @api_keys.present? %>
                <% @api_keys.each do |api_key| %>
                <tr>
                    <td>        
                    <% if api_key.name.present? %>
                        <%= api_key.name %>
                    <% else %>
                        <span class="text-muted">Untitled Key</span>
                    <% end %>
                    </td>
                    <td><code><%= display_api_key(api_key) %></code></td>
                    <td><%= display_expiration_status(api_key) %></td>
                    <td>
                    <%= link_to "Edit", edit_api_key_path(api_key), class: "btn btn-sm btn-secondary" %>
                    <%= render partial: "shared/modal", locals: { small: true, dialog: "Are you sure you want to delete this API key? This cannot be undone.", method: :delete, path: api_key_path(api_key), button_text: "Delete", danger: true } %>
                    </td>
                </tr>
                <% end %>
            <% else %>
                <tr>
                <td colspan="4" class="text-center text-muted py-3">
                    You don't have any API keys yet.
                </td>
                </tr>
            <% end %>
        </tbody>
    </table>
    <div class="mt-3">
        <%= link_to "Create API key", new_api_key_path, class: "btn btn-primary"%>
    </div>
</div>